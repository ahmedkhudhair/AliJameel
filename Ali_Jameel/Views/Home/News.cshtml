@model List<Ali_Jameel.Models.News>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>News</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"
            integrity="sha256-oP6HI9z1XaZNBrJURtCoUT5SUnxFr8s3BzRl+cbzUq8="
            crossorigin="anonymous"></script>
</head>
<body>
    <div>

        @foreach (var item in Model)
        {
            <div class="row">
                <div class="col">
                    <div class="card mb-3">
                        <div class="row g-0">
                            <div class="col-md-2" style="width: 200px;" onclick="window.location='@item.WebsiteLink';" style="cursor: pointer;">
                                <img src="@item.LogoName" class="img-fluid rounded-start" style="padding:10px;">
                            </div>
                            <div class="col-md-10">

                                <div class="card-body" onclick="window.location='@item.WebsiteLink';" style="cursor: pointer;">
                                    <h5 class="card-title">@item.Title</h5>
                                    <p class="card-text">@item.Description</p>
                                    <p class="card-text"><small class="text-muted">@item.PublishDate</small></p>
                                </div>

                                <div>
                                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal">
                                        <img src="~/Content/Logos/delete (1).png"  style="width:20px;height:20px;" />
                                    </button>
                                </div>

                                <!-- Modal -->
                                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLabel">Warning</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                Are You Sure you Want To Delete This News ???
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">NO</button>
                                                <button type="button" class="btn btn-primary" onclick="GetID(@item.ID)">YES</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }


      

        

    </div>
    <script>

        function GetID(id) {
            
            $.ajax({
                url: '@Url.Action("DeleteNews", "Home")',
                type: 'GET',
                data: { newsID : id },
                success: function (data) {
                    //if (data == true) {
                    //    //alert("deleted");
                    //}
                },
                error: function (xhr, status, error) {
                    alert( ' non no no ' + xhr.responseText);
                }
            });
            window.location.reload(true)
        }
    </script>
</body>
</html>
